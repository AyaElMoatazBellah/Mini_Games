<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#294263"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/View_Logo"
            android:layout_width="295dp"
            android:layout_height="157dp"
            android:background="#294263"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/xologo" />

        <ImageView
            android:id="@+id/View_Logo2"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:srcCompat="@drawable/tictactoe" />

        <Button
            android:id="@+id/easy"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button"
            android:text="EASY"
            android:textColor="#F9FAFC"

            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/player"
            android:layout_width="185dp"
            android:layout_height="62dp"
            android:background="@drawable/button"
            android:text="Player VS player"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/n"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button"
            android:text="NORMAL"
            android:textColor="#F9FAFC"

            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/com"
            android:layout_width="185dp"
            android:layout_height="62dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button"
            android:text="Player VS computer"

            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/hard"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/linear"
            android:layout_marginTop="0dp"
            android:background="@drawable/button"
            android:text="HARD"
            android:textColor="#F9FAFC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Btn_exit"
            android:layout_width="185dp"
            android:layout_height="62dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/button"
            android:text="Exit"

            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>